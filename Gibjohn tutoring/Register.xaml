<Window x:Class="Gibjohn_tutoring.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gibjohn_tutoring"
        mc:Ignorable="d"
        Title="Register" Height="447" Width="576" Background="#F0F0F0">
    <Grid>
        <TextBlock Text="Register Account" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" FontSize="24" FontWeight="Bold"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0">
            <TextBlock Text="Name:" Margin="0,0,0,5"/>
            <TextBox Width="200" Height="30" Margin="0,0,0,10" Name="NameBox"/>

            <TextBlock Text="Username:" Margin="0,0,0,5"/>
            <TextBox Width="200" Height="30" Margin="0,0,0,10" Name="UsernameBox"/>

            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox Width="200" Height="30" Margin="0,0,0,10" Name="PasswordBox"/>

            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox Width="200" Height="30" Margin="0,0,0,10" Name="EmailBox"/>

            <Button Content="Register" Width="100" Height="30" Click="registerbutton_Click"/>
        </StackPanel>
    </Grid>
</Window>
