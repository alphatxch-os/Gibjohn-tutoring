<Window x:Class="Gibjohn_tutoring.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gibjohn_tutoring"
        mc:Ignorable="d"
        Title="Change Password" Height="450" Width="800" Background="#F0F0F0">
    <Grid>
        <TextBlock Text="Change Password" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" FontSize="24" FontWeight="Bold"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0">
            <TextBlock Text="Username:" Margin="0,0,0,5"/>
            <TextBox Width="200" Height="30" Margin="0,0,0,10" Name="UsernameChangeBox"/>

            <TextBlock Text="Current Password:" Margin="0,0,0,5"/>
            <PasswordBox Width="200" Height="30" Margin="0,0,0,10" Name="PasswordChangeBox"/>

            <TextBlock Text="New Password:" Margin="0,0,0,5"/>
            <PasswordBox Width="200" Height="30" Margin="0,0,0,10" Name="NewPasswordBox"/>

            <Button Content="Change Password" Width="150" Height="30" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
