<Window x:Class="Gibjohn_tutoring.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gibjohn_tutoring"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" Background="#F0F0F0">
    <Grid>
        <TextBlock Text="GibJohn Tutoring System" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" FontSize="24" FontWeight="Bold"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0">
            <TextBlock Text="Username:" Margin="0,0,0,5"/>
            <TextBox Width="200" Height="30" Margin="0,0,0,10" Name="UsernameTextBox"/>

            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox Width="200" Height="30" Margin="0,0,0,10" Name="PasswordBox"/>

            <Button Content="Login" Width="100" Height="30" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
